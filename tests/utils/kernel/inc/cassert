#include <stddef.h>

#ifdef __cplusplus
extern "C" {
#endif

extern volatile long *g_test_failures;
extern char *g_output_buffer;
extern size_t g_space_available;
void doAssert(const char *file, int line, const char *expr);

#undef assert
#define assert(x) \
    if(!(x)) { doAssert(__FILE__, __LINE__, #x); }

#ifdef __cplusplus
}
#endif
