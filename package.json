{
  "name": "stl-status-chart",
  "version": "1.0.0",
  "description": "STL Status Chart",
  "main": "gather_stats.mjs",
  "scripts": {
    "pregather": "npx tsc -p src_gather/tsconfig.json",
    "gather": "node built/gather_stats.mjs",
    "premake": "npx tsc -p src/tsconfig.json",
    "make": "npx esbuild src/status_chart.mts --bundle --format=esm --minify --target=es2020 --external:chart.js --external:chartjs-adapter-luxon --outfile=built/status_chart.mjs",
    "view": "npx http-server -c-1 -o"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microsoft/STL.git#gh-pages"
  },
  "keywords": [
    "chart"
  ],
  "author": "Microsoft",
  "license": "SEE LICENSE IN LICENSE.txt",
  "bugs": {
    "url": "https://github.com/microsoft/STL/issues"
  },
  "homepage": "https://github.com/microsoft/STL/tree/gh-pages#readme",
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "singleQuote": true,
    "tabWidth": 4
  },
  "dependencies": {
    "@octokit/graphql": "^9.0.1",
    "@types/cli-progress": "^3.11.6",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.3.0",
    "@types/yargs": "^17.0.33",
    "chart.js": "^4.5.0",
    "chartjs-adapter-luxon": "^1.3.1",
    "cli-progress": "^3.12.0",
    "dotenv": "^17.2.1",
    "esbuild": "^0.25.9",
    "http-server": "^14.1.1",
    "luxon": "^3.7.1",
    "typescript": "^5.9.2",
    "yargs": "^18.0.0"
  }
}
