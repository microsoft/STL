{
  "name": "stl-status-chart",
  "version": "1.0.0",
  "description": "STL Status Chart",
  "main": "gather_stats.js",
  "scripts": {
    "pregather": "npx tsc -p src_gather/tsconfig.json",
    "gather": "node built/gather_stats.js",
    "premake": "npx tsc -p src/tsconfig.json",
    "make": "npx esbuild src/status_chart.ts --bundle --format=esm --minify --target=es2020 --external:chart.js --external:chartjs-adapter-luxon --outfile=built/status_chart.mjs",
    "view": "npx http-server -c-1 -o"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microsoft/STL.git#gh-pages"
  },
  "keywords": [
    "chart"
  ],
  "author": "Microsoft",
  "license": "SEE LICENSE IN LICENSE.txt",
  "bugs": {
    "url": "https://github.com/microsoft/STL/issues"
  },
  "homepage": "https://github.com/microsoft/STL/tree/gh-pages#readme",
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "singleQuote": true,
    "tabWidth": 4
  },
  "dependencies": {
    "@octokit/graphql": "^5.0.4",
    "@types/cli-progress": "^3.11.0",
    "@types/luxon": "^3.2.0",
    "@types/node": "^18.11.18",
    "@types/yargs": "^17.0.19",
    "chart.js": "^4.1.2",
    "chartjs-adapter-luxon": "^1.3.0",
    "cli-progress": "^3.11.2",
    "dotenv": "^16.0.3",
    "esbuild": "^0.16.16",
    "http-server": "^14.1.1",
    "luxon": "^3.2.1",
    "typescript": "^4.9.4",
    "yargs": "^17.6.2"
  }
}
